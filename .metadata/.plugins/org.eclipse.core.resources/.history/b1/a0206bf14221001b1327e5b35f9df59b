package es.uned.sisdist.common;

import java.rmi.Remote;
import java.rmi.RemoteException;

public interface ServicioAutenticacionInterface extends Remote {
	
	public int registrarse (String nombre) throws RemoteException;
	
	public int iniciarSesion (String nombre) throws RemoteException;
	
	public int getIdSesion (String nombre) throws RemoteException;
	
	public boolean deleteUsuario (String nombre) throws RemoteException;
		
}
